{
  "name": "authorization",
  "version": "0.0.0-development",
  "description": "",
  "author": "",
  "license": "ISC",
  "main": "dist/index.js",
  "private": true,
  "engines": {
    "pnpm": ">=8.6.10"
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "pnpm run build && cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "swc src -d dist --source-maps --copy-files",
    "test": "jest --forceExit --detectOpenHandles",
    "format": "prettier \"src/**/*.ts\" --write",
    "format:check": "prettier \"src/**/*.ts\" --check",
    "lint:check": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/ --fix",
    "lint:staged": "lint-staged",
    "spell:check": "cspell \"{README.md,CODE_OF_CONDUCT.md,CONTRIBUTING.md,.github/*.md,src/**/*.ts}\"",
    "seed": "knex seed:run --knexfile=knexfile.ts --verbose",
    "migrate": "knex migrate:latest --knexfile=knexfile.ts --verbose",
    "rollback": "knex migrate:rollback --knexfile=knexfile.ts --verbose",
    "make:seeder": "knex seed:make --knexfile=knexfile.ts -x ts --env development",
    "make:migration": "knex migrate:make --knexfile=knexfile.ts -x ts --env development",
    "docker:build": "docker build . -t authorization --target prod-server --build-arg NPM_TOKEN=$NPM_TOKEN",
    "semantic-release": "semantic-release",
    "cz": "cz"
  },
  "devDependencies": {
    "@eclass/semantic-release-docker": "^4.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.4",
    "@semantic-release/release-notes-generator": "^11.0.4",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.72",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.196",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "cross-env": "^7.0.3",
    "cspell": "^6.31.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-import": "^2.28.0",
    "execa": "^5.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "node-gyp": "^9.4.0",
    "nodemon": "^3.0.1",
    "npmlog": "^7.0.1",
    "prettier": "^3.0.0",
    "semantic-release": "^21.0.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@otedesco/cache": "^2.0.1",
    "@otedesco/commons": "^2.0.2",
    "@otedesco/notify": "^2.0.1",
    "@otedesco/server-utils": "^3.0.3",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "dotenv": "^16.3.1",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "knex": "^2.5.1",
    "lodash": "^4.17.21",
    "objection": "^3.1.1",
    "objection-db-errors": "^1.1.2",
    "pg": "^8.11.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "pnpm run lint"
  }
}